{
  "manifest_version": 3,
  "name": "Twitch Chat Header Cleaner",
  "version": "1.1",

  "action": {},
  "description": "트위치 채팅창의 헤더를 없애줍니다.",
  "icons": {
    "128": "/images/twitch_icon_128.png"
  },

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content-script.js"]
    }
  ],
  "host_permissions": [
    "https://www.twitch.tv/"
  ]
}
